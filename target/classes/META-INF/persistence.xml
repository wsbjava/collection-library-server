<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="manager" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pl.wsb.collection.model.ApiToken</class>
        <class>pl.wsb.collection.model.Author</class>
        <class>pl.wsb.collection.model.CollectionEntry</class>
        <class>pl.wsb.collection.model.CollectionEntryAuthor</class>
        <class>pl.wsb.collection.model.CollectionEntryGenre</class>
        <class>pl.wsb.collection.model.CollectionEntryPublisher</class>
        <class>pl.wsb.collection.model.CollectionLibrary</class>
        <class>pl.wsb.collection.model.CollectionLibraryStatus</class>
        <class>pl.wsb.collection.model.CollectionRequestStatus</class>
        <class>pl.wsb.collection.model.CollectionType</class>
        <class>pl.wsb.collection.model.Genre</class>
        <class>pl.wsb.collection.model.GenreCollectionType</class>
        <class>pl.wsb.collection.model.Publisher</class>
        <class>pl.wsb.collection.model.Role</class>
        <class>pl.wsb.collection.model.UserAccount</class>
        <class>pl.wsb.collection.model.UserAccountRole</class>
        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.user" value="java_collection" />
            <property name="javax.persistence.jdbc.password"
                      value="javaWSB1" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/collection_management?
useLegacyDatetimeCode=false&amp;serverTimezone=CET" />
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="validate" />
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>